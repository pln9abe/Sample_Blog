<div class = "container-sm"><br>

    <h2><%= @article.title %></h2>
    <h5><%= @article.author %></h5><br><br>
    <p><%= @article.body %></p>

    <div>

    <%= link_to "Back", root_path , class: "btn btn-primary"%>
    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-success"%>
    <%= link_to "Delete", @articles, :method => :delete, data: {confirm: "Are you sure?"},  class: "btn btn-danger"  %>
    </div>

    <h2>Comments</h2>
    <% @article.comments.each do |comment| %>

      <p>
        <%= comment.commenter %>:
        <%= comment.body %>

      </p>
    <% end %>

    <h3>Add Comments</h3>
      <%= form_with model: [ @article, @article.comments.build ] do |f| %>
        <p>
          <%= f.label :commenter %><br>
          <%= f.text_field :commenter %>
        </p>
        <p>
          <%= f.label :body %><br>
          <%= f.text_area :body %>
        </p>
        <p>
          <%= f.submit %>
        </p>
      <% end %>
</div>
